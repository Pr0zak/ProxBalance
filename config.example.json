{
  "collection_interval_minutes": 60,
  "ui_refresh_interval_minutes": 15,
  "proxmox_host": "10.0.0.3",
  "proxmox_port": 8006,
  "proxmox_auth_method": "api_token",
  "proxmox_api_token_id": "proxbalance@pam!proxbalance",
  "proxmox_api_token_secret": "",
  "proxmox_username": "proxbalance@pam",
  "proxmox_password": "",
  "proxmox_verify_ssl": false,
  "ai_provider": "none",
  "ai_recommendations_enabled": false,
  "ai_config": {
    "openai": {
      "api_key": "",
      "model": "gpt-4o"
    },
    "anthropic": {
      "api_key": "",
      "model": "claude-sonnet-4-5-20250929"
    },
    "local": {
      "base_url": "http://localhost:11434",
      "model": "llama3.1:8b"
    }
  },
  "collection_optimization": {
    "cluster_size": "medium",
    "parallel_collection_enabled": true,
    "max_parallel_workers": 5,
    "skip_stopped_guest_rrd": true,
    "node_rrd_timeframe": "day",
    "guest_rrd_timeframe": "hour"
  },
  "recommendation_thresholds": {
    "cpu_threshold": 60,
    "mem_threshold": 70,
    "iowait_threshold": 30,
    "_comment_thresholds": "IOWait guidelines: <10% good, 10-20% acceptable, 20-30% high, >30% critical. Adjust based on workload and storage performance."
  },
  "automated_migrations": {
    "enabled": false,
    "dry_run": true,
    "check_interval_minutes": 5,
    "schedule": {
      "migration_windows": [
        {
          "name": "Nightly Window",
          "enabled": true,
          "days": ["monday", "tuesday", "wednesday", "thursday", "friday"],
          "start_time": "22:00",
          "end_time": "06:00",
          "timezone": "America/New_York"
        }
      ],
      "blackout_windows": [
        {
          "name": "Business Hours",
          "enabled": true,
          "days": ["monday", "tuesday", "wednesday", "thursday", "friday"],
          "start_time": "08:00",
          "end_time": "18:00"
        }
      ]
    },
    "rules": {
      "min_confidence_score": 75,
      "max_migrations_per_run": 3,
      "max_concurrent_migrations": 1,
      "cooldown_minutes": 30,
      "respect_ignore_tags": true,
      "respect_exclude_tags": true,
      "respect_exclude_affinity": true,
      "require_auto_migrate_ok_tag": false
    },
    "safety_checks": {
      "check_cluster_health": true,
      "require_quorum": true,
      "max_node_memory_percent": 90,
      "max_node_cpu_percent": 85,
      "abort_on_failure": true
    },
    "notifications": {
      "enabled": false,
      "webhook_url": "",
      "on_start": true,
      "on_complete": true,
      "on_failure": true
    }
  },
  "distribution_balancing": {
    "enabled": false,
    "guest_count_threshold": 2,
    "max_cpu_cores": 2,
    "max_memory_gb": 4,
    "_comment": "Distribution balancing migrates small VMs/CTs to balance guest counts across nodes",
    "_comment_threshold": "Only consider distribution when node guest count differs by this amount or more",
    "_comment_cpu": "Only migrate guests with CPU cores <= this value (0 = no limit)",
    "_comment_memory": "Only migrate guests with memory <= this value in GB (0 = no limit)"
  }
}
